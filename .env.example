# KuCoin API Credentials (REQUIRED)
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_passphrase_here

# Mode: LIVE, PAPER, SHADOW, or BACKTEST (default: BACKTEST)
# LIVE   – real orders placed on KuCoin; requires LIVE_TRADING=true below
# PAPER  – simulated orders with live market data (no real risk)
# SHADOW – signal computation and decision logging only; NO orders
# BACKTEST – historical simulation on kline data
BOT_MODE=BACKTEST

# Second explicit gate for LIVE mode – MUST be "true" to trade real money
LIVE_TRADING=false

# Kill switch: set to "true" to immediately stop all trading
KILL_SWITCH=false

# Allow internal transfers between Funding/Trading/Futures accounts
ALLOW_INTERNAL_TRANSFERS=true

# Enable extra diagnostic logging (signal values, EV gate decisions, etc.)
LIVE_DIAGNOSTIC=false

# Database: sqlite or postgres (default: sqlite)
DB_TYPE=sqlite
DB_URL=sqlite:///kucoin_bot.db
# DB_URL=postgresql://user:pass@localhost:5432/kucoin_bot

# Redis (optional, for fast state cache)
# REDIS_URL=redis://localhost:6379/0

# Risk Limits
MAX_DAILY_LOSS_PCT=3.0
MAX_DRAWDOWN_PCT=10.0
MAX_TOTAL_EXPOSURE_PCT=80.0
MAX_LEVERAGE=3.0
MAX_PER_POSITION_RISK_PCT=2.0
MAX_CORRELATED_EXPOSURE_PCT=30.0

# EV Gate: minimum expected-value buffer above round-trip costs (basis points)
# Trade is blocked when expected_move < (round_trip_fees + slippage + MIN_EV_BPS)
MIN_EV_BPS=15.0

# Kline candle interval for signal computation and trade cadence.
# Shorter candles = faster response.  Valid: 1min, 5min, 15min, 30min, 1hour, etc.
KLINE_TYPE=15min

# Cooldown: minimum bars (cycles) required between entry signals per symbol
COOLDOWN_BARS=3

# Short Trading
ALLOW_SHORTS=true
SHORT_PREFER_FUTURES=true
REQUIRE_FUTURES_FOR_SHORT=true
FUNDING_RATE_PER_8H=0.0001
BORROW_RATE_PER_HOUR=0.00003
EXPECTED_HOLDING_HOURS=4.0

# Logging
LOG_LEVEL=INFO
