# KuCoin API Credentials (REQUIRED)
KUCOIN_API_KEY=your_api_key_here
KUCOIN_API_SECRET=your_api_secret_here
KUCOIN_API_PASSPHRASE=your_passphrase_here

# Mode: LIVE or BACKTEST (default: BACKTEST)
BOT_MODE=BACKTEST

# Kill switch: set to "true" to immediately stop all trading
KILL_SWITCH=false

# Allow internal transfers between Funding/Trading/Futures accounts
ALLOW_INTERNAL_TRANSFERS=false

# Database: sqlite or postgres (default: sqlite)
DB_TYPE=sqlite
# DB_URL=postgresql://user:pass@localhost:5432/kucoin_bot

# Redis (optional, for fast state cache)
# REDIS_URL=redis://localhost:6379/0

# Risk Limits
MAX_DAILY_LOSS_PCT=3.0
MAX_DRAWDOWN_PCT=10.0
MAX_TOTAL_EXPOSURE_PCT=80.0
MAX_LEVERAGE=3.0
MAX_PER_POSITION_RISK_PCT=2.0
MAX_CORRELATED_EXPOSURE_PCT=30.0

# Logging
LOG_LEVEL=INFO
